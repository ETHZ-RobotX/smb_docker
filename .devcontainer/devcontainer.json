{
	"name": "SuperMegaBot Dev Container",
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile",
		"args": {
			"BUILDKIT_INLINE_CACHE": "0",
			"BASE_IMAGE": "ghcr.io/ethz-robotx/smb_docker",
			"VNC_RESOLUTION": "1920x1080x32"
		}
	},
	"runArgs": [
		// Uncomment it if you have problems with the auto X11 forwarding
		// "--volume=/tmp/.X11-unix/X0:/tmp/.X11-unix/X0", 
		"--shm-size=1g",
		"--network=host"
	],
	"privileged": true,
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "robotx"
		},
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"password": "robotx"
		}
	},
	"forwardPorts": [
		6080,
		5901
	],
	"portsAttributes": {
		"6080": {
			"label": "VNC web client (noVNC)",
			"onAutoForward": "silent"
		},
		"5901": {
			"label": "VNC TCP port",
			"onAutoForward": "silent"
		}
	},
	"containerUser": "robotx",
	"postCreateCommand": "bash ./.devcontainer/post-create.sh",
	"customizations": {
		"vscode": {
			"settings": {
				"git.autoRepositoryDetection": true,
				"git.repositoryScanMaxDepth": 5,
				"git.ignoredRepositories": [
					"src/lib/ocs2",
					"src/lib/gtsam_catkin",
					"src/misc/minkindr",
					"src/misc/catkin_simple",
					"src/misc/minkindr_ros",
					"src/misc/eigen_checks",
					"src/misc/glog_catkin",
					"src/misc/gflags_catkin",
					"src/misc/mav_comm",
					"src/misc/eigen_catkin",
					"src/misc/yaml_cpp_catkin"
				]
			},
			"extensions": [
				"ms-iot.vscode-ros",
				"redhat.vscode-xml",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-themes"
			]
		}
	}
}